<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/view_bar"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:background="@color/dark_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/ifv"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            app:layout_constraintEnd_toEndOf="@+id/view_bar"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/view_bar"
            app:layout_constraintTop_toTopOf="@+id/view_bar">

            <CustomAttribute
                app:attributeName="roundPercent"
                app:customFloatValue="0" />
        </Constraint>


        <Constraint
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_constraintEnd_toEndOf="@+id/view_bar"
            app:layout_constraintStart_toStartOf="@+id/view_bar"
            app:layout_constraintTop_toTopOf="@+id/view_bar" />

        <Constraint
            android:id="@+id/buttonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/view_bar"
            app:layout_constraintTop_toTopOf="@+id/view_bar" />


        <Constraint
            android:id="@+id/iv_vert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="@+id/view_bar"
            app:layout_constraintTop_toTopOf="@+id/view_bar" />


        <Constraint
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="248dp"
            app:layout_constraintStart_toStartOf="@+id/view_bar"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="24dp">
            <CustomAttribute
                app:attributeName="textSize"
                app:customFloatValue="32" />
        </Constraint>

        <Constraint
            android:id="@+id/tv_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/tv_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_name">

            <CustomAttribute
                app:attributeName="textColor"
                app:customColorValue="@color/white" />
        </Constraint>

        <Constraint
            android:id="@id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="320dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_bar" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/mid">
        <Constraint
            android:id="@+id/view_bar"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@color/light_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/ifv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="-26dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="@+id/view_bar"
            app:layout_constraintTop_toBottomOf="@id/buttonBack">
            <CustomAttribute
                app:attributeName="roundPercent"
                app:customFloatValue="1" />
        </Constraint>


        <Constraint
            android:id="@+id/buttonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/view_bar"
            app:layout_constraintTop_toTopOf="@+id/view_bar" />

        <Constraint
            android:id="@+id/iv_vert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="@+id/view_bar"
            app:layout_constraintTop_toTopOf="@+id/view_bar" />

        <Constraint
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toBottomOf="@id/buttonBack"
            android:layout_marginTop="-8dp"
            app:layout_constraintBottom_toBottomOf="@+id/ifv"
            app:layout_constraintStart_toEndOf="@+id/ifv"
            app:layout_constraintTop_toTopOf="@+id/ifv">
            <CustomAttribute
                app:attributeName="textSize"
                app:customFloatValue="22" />

        </Constraint>


        <Constraint
            android:id="@+id/tv_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/tv_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_name">

            <CustomAttribute
                app:attributeName="textColor"
                app:customColorValue="#848991" />
            <CustomAttribute
                app:attributeName="textSize"
                app:customFloatValue="16" />
        </Constraint>


        <Constraint
            android:id="@id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="140dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_bar" />
        <Constraint
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="-80dp"
            app:layout_constraintEnd_toEndOf="@+id/view_bar"
            app:layout_constraintStart_toStartOf="@+id/view_bar"
            app:layout_constraintTop_toTopOf="@+id/view_bar" />
    </ConstraintSet>
    
    <ConstraintSet android:id="@+id/end">

        <Constraint
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/light_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/ifv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonBack"
            app:layout_constraintStart_toEndOf="@+id/buttonBack">

            <CustomAttribute
                app:attributeName="roundPercent"
                app:customFloatValue="1" />
        </Constraint>
        <Constraint
            android:id="@+id/buttonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/view_bar"
            app:layout_constraintTop_toTopOf="@+id/view_bar" />
        <Constraint
            android:id="@+id/iv_vert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="@+id/view_bar"
            app:layout_constraintTop_toTopOf="@+id/view_bar" />
        <Constraint
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/ifv"
            app:layout_constraintStart_toEndOf="@+id/ifv"
            app:layout_constraintTop_toTopOf="@+id/ifv">
            <CustomAttribute
                app:attributeName="textSize"
                app:customFloatValue="18" />
        </Constraint>
        <Constraint
            android:id="@+id/tv_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="-16dp"
            app:layout_constraintEnd_toEndOf="@+id/tv_name"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tv_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_name">
            <CustomAttribute
                app:attributeName="textSize"
                app:customFloatValue="12" />
            <CustomAttribute
                app:attributeName="textColor"
                app:customColorValue="#848991" />
        </Constraint>
        <Constraint
            android:id="@id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_bar" />
        <Constraint
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="-80dp"
            app:layout_constraintEnd_toEndOf="@+id/view_bar"
            app:layout_constraintStart_toStartOf="@+id/view_bar"
            app:layout_constraintTop_toTopOf="@+id/view_bar" />
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/mid"
        app:constraintSetStart="@+id/start">
        <OnSwipe
            app:dragDirection="dragUp"
            app:maxAcceleration="100"
            app:touchAnchorId="@id/scrollView"
            app:touchAnchorSide="top" />
    </Transition>
    <Transition
        app:constraintSetEnd="@+id/end"
        app:constraintSetStart="@+id/mid">
        <OnSwipe
            app:dragDirection="dragUp"
            app:touchAnchorId="@id/scrollView" />
    </Transition>
</MotionScene>



